<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.PRM_V3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/orange_600</item>
        <item name="colorPrimaryVariant">@color/orange_600</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <!-- Theme for OrderDetailActivity without ActionBar -->
    <style name="Theme.PRM_V3.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_600</item>
        <item name="colorPrimaryVariant">@color/orange_600</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>