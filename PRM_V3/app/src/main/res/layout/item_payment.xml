<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header với Payment ID và Status -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán #1"
                android:textStyle="bold"
                android:textColor="@color/orange_600"
                android:textSize="18sp"
                tools:text="Thanh toán #17" />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn: #460"
                android:layout_marginStart="12dp"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                tools:text="Đơn: #460" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ thanh toán"
                android:textColor="@color/orange_600"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_status_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                tools:text="Chờ thanh toán" />

        </LinearLayout>

        <!-- Customer Information -->
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Khách hàng: hoanvngoc"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Khách hàng: hoanvngoc" />

        <!-- Payment Details -->
        <LinearLayout
            android:id="@+id/layout_payment_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvCustomerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Cột trái -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23500₫"
                    android:textColor="@color/green_600"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="2dp"
                    tools:text="235000₫" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thẻ tín dụng"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="card" />

            </LinearLayout>

            <!-- Cột phải -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày thanh toán"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-07-15"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="2025-07-15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giao dịch"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvTransactionRef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="Chưa có" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons - Chỉ 2 nút -->
        <LinearLayout
            android:id="@+id/layout_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_payment_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Success Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_success_payment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green_600"
                android:text="XỬ LÝ"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Fail Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fail_payment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red_600"
                android:text="THẤT BẠI"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:cornerRadius="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>