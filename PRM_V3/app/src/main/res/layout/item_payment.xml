<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header với Payment ID và Status -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textStyle="bold"
                android:textColor="@color/orange_600"
                android:textSize="18sp"
                tools:text="Thanh toán #1" />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn: 3"
                android:layout_marginStart="12dp"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                tools:text="Đơn: #3" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pending"
                android:textColor="@color/orange_600"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_status_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                tools:text="Chờ thanh toán" />

        </LinearLayout>

        <!-- Customer Information -->
        <LinearLayout
            android:id="@+id/layout_customer_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng: Tran Van A"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Khách hàng: Tran Van A" />

        </LinearLayout>

        <!-- Payment Details -->
        <LinearLayout
            android:id="@+id/layout_payment_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_customer_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Cột trái -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125,000₫"
                    android:textColor="@color/green_600"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    tools:text="125,000₫" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="digital_wallet"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="Ví điện tử" />

            </LinearLayout>

            <!-- Cột phải -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày thanh toán"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-12-02"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="2024-12-02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giao dịch"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvTransactionRef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TXN123456"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="TXN123456" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons - UPDATED: Always visible, smart visibility -->
        <LinearLayout
            android:id="@+id/layout_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layout_payment_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Process Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_process_payment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_600"
                android:text="Xử lý"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                app:cornerRadius="8dp"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Complete Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_complete_payment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green_600"
                android:text="Hoàn tất"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="2dp"
                app:cornerRadius="8dp"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Fail Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fail_payment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red_600"
                android:text="Thất bại"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                app:cornerRadius="8dp"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>