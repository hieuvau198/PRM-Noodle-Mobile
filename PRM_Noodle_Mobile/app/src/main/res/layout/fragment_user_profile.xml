<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header với background gradient -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_banner">

            <!-- Container for avatar and edit button -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_image_bg"
                    android:contentDescription="Avatar"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />

                <!-- Edit button -->
            </FrameLayout>

        </FrameLayout>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="-50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/ic_edit"
                    app:backgroundTint="@color/white"
                    app:fabSize="mini"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Thông tin chi tiết -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/ProfileInfoLabel"
                        android:text="Tên đăng nhập" />

                    <TextView
                        android:id="@+id/tv_username"
                        style="@style/ProfileInfoValue"
                        android:text="username" />

                    <TextView
                        style="@style/ProfileInfoLabel"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/ProfileInfoValue"
                        android:text="email@example.com" />

                    <TextView
                        style="@style/ProfileInfoLabel"
                        android:text="Số điện thoại" />

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/ProfileInfoValue"
                        android:text="+84 xxx xxx xxx" />

                    <TextView
                        style="@style/ProfileInfoLabel"
                        android:text="Địa chỉ" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/ProfileInfoValue"
                        android:text="Địa chỉ của bạn" />

                    <TextView
                        style="@style/ProfileInfoLabel"
                        android:text="Vai trò" />

                    <TextView
                        android:id="@+id/tv_role"
                        style="@style/ProfileInfoValue"
                        android:text="Khách hàng" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Order History Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_order_history"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:text="Xem lịch sử đơn hàng"
            android:textSize="16sp"
            app:icon="@drawable/ic_order_confirm"
            app:iconGravity="textStart"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>
</ScrollView>